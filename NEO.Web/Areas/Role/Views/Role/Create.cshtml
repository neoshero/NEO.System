@{
    Layout = null;
}

<form class="form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">角色编号</label>
        <div class="col-md-4">
            <input name="Code" class="form-control input-sm" />
        </div>
        <label class="col-md-2 control-label">角色名称</label>
        <div class="col-md-4">
            <input name="Name" class="form-control input-sm" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">描述信息</label>
        <div class="col-md-10">
            <textarea name="Remark" class="form-control input-sm"  style="height: 200px;"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">通用配置</label>
        <div class="col-md-10">
            <label class="checkbox-inline">
                <input name="IsPublish" type="checkbox" /> 是否公开
            </label>
            <label class="checkbox-inline">
                <input name="Enabled" type="checkbox"> 是否禁用
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <button class="btn btn-success">取消</button>
            <button class="btn btn-success">保存</button>
        </div>
    </div>
</form>